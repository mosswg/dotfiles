#!/bin/bash
# Prints the current volume or ðŸ”‡ if muted.
[ $(pamixer --get-mute) = true ] && echo "ï€¦x" && exit
vol="$(pamixer --get-volume)"
if [ "$vol" -gt "70" ]; then
    icon="ï€¨"
elif [ "$vol" -gt "30" ]; then
    icon="ï€§"
elif [ "$vol" -gt "0" ]; then
